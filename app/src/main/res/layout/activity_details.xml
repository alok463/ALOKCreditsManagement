<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Details">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/details_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="130dp"
            android:text="John Doe"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/emailtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/details_user_name"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="25dp"
            android:text="Email:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/details_user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/emailtext"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/emailtext"
            android:text="sample@xyz.com"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/credittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/emailtext"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:text="Credits:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/details_user_credits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/credittext"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/credittext"
            android:text="200"
            android:textSize="20sp" />

        <Button
            android:id="@+id/transferButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/details_user_credits"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:background="@color/cardview_dark_background"
            android:padding="5dp"
            android:text="Transfer Credits"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>